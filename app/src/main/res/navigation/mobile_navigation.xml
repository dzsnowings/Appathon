<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_browse">

    <fragment
        android:id="@+id/navigation_browse"
        android:name="com.example.studybuddyfinder.ui.browse.BrowseFragment"
        android:label="Browse"
        tools:layout="@layout/fragment_browse" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.studybuddyfinder.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_editProfile"
        android:name="com.example.studybuddyfinder.ui.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/edit_profile" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.studybuddyfinder.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

</navigation>